{
  "expo": {
    "name": "VbizleExpo",
    "slug": "vbizle-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "vbizle",
    "userInterfaceStyle": "automatic",

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },

    "plugins": [
      "expo-router"
    ],

    "experiments": {
      "router": true
    },

    "assetBundlePatterns": [
      "**/*"
    ],

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Kamera erişimi gereklidir.",
        "NSMicrophoneUsageDescription": "Mikrofon erişimi gereklidir."
      }
    },

    "android": {
      "package": "com.vbizle.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MICROPHONE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      }
    },

    "extra": {
      "LIVEKIT_URL": "wss://vbizle-mqeip5rb.livekit.cloud",
      "TOKEN_URL": "https://vbizle-token-server.onrender.com/token",

      "router": {},
      "eas": {
        "projectId": "3731a321-aa29-41d8-9c31-8f56f1d6f524"
      }
    }
  }
}
